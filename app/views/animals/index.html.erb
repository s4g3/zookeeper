<h1>Listing animals</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
  <th>Found <%= pluralize(@animals.count, 'animal') %>.</th>
    <tr>
      <th>Name</th>
      <th>Species</th>
      <th>Weight</th>
      <th>Notes</th>
    </tr>
  </thead>

  <% @animals.each do |animal| %>
    <tr>
      <td><%= link_to animal.name, animal%></td>
      <td><%= animal.species %></td>
      <td><%= number_with_delimiter animal.weight %> kg</td>
      <td><%= truncate animal.notes %></td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'New Animal', new_animal_path %>


